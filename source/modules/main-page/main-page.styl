.main-page
	&--padding
		padding-top 200px
		padding-bottom 250px

	&__header
		margin-bottom 32px

	&__section
		margin-bottom 32px

		&_faq
			display grid
			grid-template-columns 1fr 1fr
			grid-gap 55px

	&__section_quick-start
		margin-right auto
		margin-left auto
		max-width 680px

	&__title
		margin 0
		padding-bottom 1em
		text-align center
		font-weight 400
		font-size em(24px)

.main-header
	margin-bottom 95px

	h1
		text-align center
		font-size 84px

.faq-card
	padding 40px 60px
	max-width 1078px
	border-radius 12px
	background #ffffff

	&__top
		display flex
		align-items center
		margin-bottom 65px

	&__icon
		display inline-flex
		justify-content center
		align-items center
		size 110px
		border-radius 50%
		background-color rgba(76, 191, 146, 0.2)

	&__name
		margin-left 35px
		font-weight 700
		font-size 48px

	&__list
		margin 0
		padding 0
		list-style none

		li
			margin-bottom 60px

		a
			border-bottom 1px solid
			text-decoration none
			font-weight 700
			font-size 32px
			line-height 48px
			cursor pointer

			&:hover
				border-bottom-color transparent

.cta-section
	margin-bottom 50px
	padding-top 180px
	padding-bottom 170px
	background-color #1d3a5d
	color #ffffff

	p
		font-size 32px

	h3
		font-weight 700
		font-size 84px

	.container
		display flex

	&__button
		display flex
		align-items center
		margin-left auto
		text-decoration none
		text-transform uppercase
		font-size 32px
		transition all 300ms ease

		span
			margin-left 20px

		&
		&:visited
			color #ffffff

		&:hover
			box-shadow 0 0 10px #fff

	&__right
		display flex
		align-items center
		margin-left auto

	&__button
		padding 35px 90px
		border-radius 6px
		background-color #4cbf92