.footer
	padding-top 100px
	padding-bottom 220px
	background #ffffff
	font-size 28px
	line-height 38px

	&__icon
		margin-bottom 1.5em
		size 2em
		color $gray-4

	&__copyright
		// 

.footer-menu
	display grid
	grid-template-columns 1fr 1fr 1fr 1fr
	grid-gap 30px

.footer-menu-column
	max-width 335px
	font-size 32px
	line-height 64px

	&__header
		margin-bottom 60px
		font-weight 700
		font-size 48px

	ul
		margin 0
		padding 0
		list-style none

		li
			a
				&
				&:visited
					color #000000
					text-decoration none

				&:hover
					color $blue-6

.bottom-line
	padding-top 50px
	padding-bottom 90px
	background #ffffff
	color #b0b9c3
	text-align left
	text-align center
	font-size 28px